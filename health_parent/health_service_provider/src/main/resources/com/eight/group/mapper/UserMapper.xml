<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eight.group.mapper.UserMapper">
    <select id="getUserByUsernameAndPassword" parameterType="tuser" resultType="com.eight.group.pojo.TUser">
        select * from user where username = #{username} AND password = #{password}
    </select>
    <select id="findByUsername" resultType="com.eight.group.pojo.TUser">
        select * from user where username = #{username}
    </select>
</mapper>